@page
@model eUcionica.Pages.OblastStrana.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Izbrisi</h1>

<h3>Da li ste sigurni da zelite da izbrisete oblast?</h3>
<div>
    <h4>Oblast</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Oblast.Predmet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Oblast.Predmet.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Oblast.Ime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Oblast.Ime)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Oblast.ID" />
        <input type="submit" value="Izbrisi" class="btn btn-danger" /> |
        <a asp-page="./Oblasti">Nazad na listu</a>
    </form>
</div>
