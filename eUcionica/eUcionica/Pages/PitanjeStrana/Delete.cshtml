@page
@model eUcionica.Pages.PitanjeStrana.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Izbrisi</h1>

<h3>Da li ste sigurni da zelite da izbrisete pitanje?</h3>
<div>
    <h4>Pitanje</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Predmet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Predmet.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Oblast)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Oblast.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Tezina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Tezina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Zadatak)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Zadatak)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Odgovor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Odgovor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pitanje.Slika)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pitanje.Slika)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pitanje.ID" />
        <input type="submit" value="Izbrisi" class="btn btn-danger" /> |
        <a asp-page="./Pitanje">Nazad na listu</a>
    </form>
</div>
